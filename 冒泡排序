#include<stdio.h>
#include<stdlib.h>
void bubble(int a[],int n);
main()
{int n,i,*a;
 printf("please input n:");
 scanf("%d",&n);
 a=(int *)calloc(n,sizeof(int));
 if(a==NULL){
	 printf("not able to allocate memory.\n");
	 exit(1);}
 printf("Enter %d characters:",n);
     for(i=0;i<n;i++)
		 scanf("%d",a+i);
 bubble(a,n);
 printf("After sorted:");
 for(i=0;i<n;i++)
	 printf("%3d",a[i]);
 printf("\n");
 free(a);
}
void bubble(int a[],int n)
{int i,j,t,k=0; 
 for(i=1;i<n;i++){
	 k=0;
    for(j=0;j<n-i;j++)
        if(a[j]>a[j+1])
		 {t=a[j];
		  a[j]=a[j+1];
		  a[j+1]=t;
		  k++;}
		if(k==0)
			break;}
