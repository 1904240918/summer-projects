#include<stdio.h>
#include<stdlib.h>
void choice(int a[],int n);
main()
{int n,*p,i;
 printf("please input n:");
 scanf("%d",&n);
 p=(int *)calloc(n,sizeof(int));
 if(p==NULL){
	 printf("Error!");
	 exit(1);}
 printf("Enter %d characters:",n);
 for(i=0;i<n;i++)
	 scanf("%d",p+i);
 choice(p,n);
 printf("After sorted:");
 for(i=0;i<n;i++)
	 printf("%3d",p[i]);
 printf("\n");
 free(p);
}
void choice(int a[],int n)
{int i,j,min,t;
 for(i=0;i<n-1;i++)
    {min=i;
     for(j=i+1;j<n;j++)
	  if(a[j]<a[min])
		  min=j;
	 t=a[i];
	 a[i]=a[min];
     a[min]=t;}

}
